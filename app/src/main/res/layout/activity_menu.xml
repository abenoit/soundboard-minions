<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.soundboard.minions.soundboardminions.MenuActivity"
    android:orientation="vertical">


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/go_to_soundboard"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/goToSoundboard"
        android:background="@color/minion_blue"
        android:onClick="goToSoundboard"
        android:textSize="12sp"
        android:textStyle="bold" />


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/go_to_memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/goToMemory"
        android:background="@color/minion_blue"
        android:onClick="goToMemory"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
